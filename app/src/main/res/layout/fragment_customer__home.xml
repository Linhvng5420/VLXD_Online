<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CustomerHomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <SearchView
                android:id="@+id/sv_customer_home"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:iconifiedByDefault="false"
                android:searchIcon="@drawable/search" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:layout_marginBottom="-5dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rc_danh_muc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backnav" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp">

                <Spinner
                    android:id="@+id/sp_loc"
                    style="@style/StyleDropdownSearch"
                    android:layout_marginRight="5dp" />

                <Spinner
                    android:id="@+id/sp_xap_sep"
                    style="@style/StyleDropdownSearch" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_prod_customer_home"
                android:layout_width="match_parent"
                android:layout_height="570dp"
                android:layout_marginHorizontal="10dp" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>