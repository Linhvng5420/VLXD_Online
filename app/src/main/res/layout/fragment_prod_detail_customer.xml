<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProdDetailCustomerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="11">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_detail"
                    android:layout_width="match_parent"
                    android:layout_height="250dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rc_anh_sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backnav"
                    android:paddingVertical="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_detail"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_anh_chinh"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:background="@drawable/bg_img_detail"
                                android:scaleType="centerCrop"
                                android:src="@drawable/star" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingHorizontal="5dp">

                                <TextView
                                    android:id="@+id/tv_tenSp_detail"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:gravity="center_vertical"
                                    android:paddingHorizontal="5dp"
                                    android:text="Thép Hòa Phát"
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:id="@+id/tv_giaSp_detail"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:gravity="center_vertical"
                                    android:paddingHorizontal="5dp"
                                    android:text="13.640 VND"
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:paddingHorizontal="5dp">

                                    <TextView
                                        android:id="@+id/tv_ton_kho_detail"
                                        android:layout_width="120dp"
                                        android:layout_height="30dp"
                                        android:gravity="center_vertical"
                                        android:text="Kho: 500"
                                        android:textSize="15dp"
                                        android:textColor="@color/black"/>

                                    <TextView
                                        android:id="@+id/tv_daBan_detail"
                                        android:layout_width="match_parent"
                                        android:layout_height="30dp"
                                        android:gravity="center_vertical"
                                        android:text="Đã Bán: 150"
                                        android:textSize="15dp"
                                        android:textColor="@color/black"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="30dp"
                                        android:gravity="center_vertical"
                                        android:paddingLeft="5dp"
                                        android:text="Đơn vị tính: "
                                        android:textSize="15dp"
                                        android:textStyle="bold"
                                        android:textColor="@color/black"/>

                                    <TextView
                                        android:id="@+id/tv_donVi_detail"
                                        android:layout_width="match_parent"
                                        android:layout_height="30dp"
                                        android:gravity="center_vertical"
                                        android:text="Tấm"
                                        android:textSize="15dp"
                                        android:textStyle="bold"
                                        android:textColor="@color/black"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="-2dp"
                                android:paddingHorizontal="5dp"
                                android:text="Mô tả:"
                                android:textSize="16dp"
                                android:textColor="@color/black"/>

                            <TextView
                                android:id="@+id/tv_moTa_detail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="5dp"
                                android:paddingBottom="5dp"
                                android:text="Thép cuộn CB240 chất lượng cao, độ dày 1mm, đàn hồi tốt, cứng cáp, chắc chắn."
                                android:textSize="15dp"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_datHangNgay"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginVertical="5dp"
                        android:backgroundTint="@color/white"
                        android:text="Đặt Hàng Ngay"
                        android:textColor="@color/black"
                        android:textSize="21dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/back6"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="5dp"
                android:layout_marginRight="10dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/btn_giam"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:background="#D7D7D7"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="-"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_soLuong"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="1" />

                <TextView
                    android:id="@+id/btn_tang"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:background="#D7D7D7"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="+"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_addToCart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:text="Thêm Vào Giỏ Hàng"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>