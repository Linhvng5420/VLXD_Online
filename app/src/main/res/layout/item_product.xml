<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5.6dp"
    app:cardElevation="3.5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="119dp"
        android:layout_height="200dp"
        android:background="@drawable/back2"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3.5dp"
            android:layout_marginTop="3.5dp"
            app:cardCornerRadius="5.6dp">

            <ImageView
                android:id="@+id/imgItem"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tc" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNameItem"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_margin="2dp"
                android:autoSizeMaxTextSize="16sp"
                android:autoSizeMinTextSize="13sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:text="Tên SP gỔ"
                android:textAlignment="gravity"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_chua_dg"
                android:layout_width="119dp"
                android:layout_height="17.5dp"
                android:gravity="center"
                android:text="Chưa Có Đánh Giá"
                android:textColor="#FD0"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ln_so_sao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingRight="2dp">

                <ImageView
                    android:id="@+id/star_1"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_weight="1"
                    android:src="@drawable/star" />

                <ImageView
                    android:id="@+id/star_2"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_weight="1"
                    android:src="@drawable/star" />

                <ImageView
                    android:id="@+id/star_3"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_weight="1"
                    android:src="@drawable/star" />

                <ImageView
                    android:id="@+id/star_4"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_weight="1"
                    android:src="@drawable/star" />

                <ImageView
                    android:id="@+id/star_5"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_weight="1"
                    android:src="@drawable/star" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvPriceItem"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="2dp"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeMinTextSize="14sp"
                android:autoSizeTextType="uniform"
                android:text="100.000.000.000"
                android:textAlignment="center"
                android:textColor="#CA1304"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_buy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#CE291D"
                android:gravity="center"
                android:paddingVertical="1.4dp"
                android:text="ĐẶT NGAY"
                android:textColor="#FFF"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>