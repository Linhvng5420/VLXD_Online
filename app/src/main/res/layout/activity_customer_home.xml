<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activity.Customer_HomeActivity">

    <FrameLayout
        android:id="@+id/frm_customer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.2"
        android:background="@drawable/back4">

    </FrameLayout>
    <!--  NAVIGATOR BOTTON  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/back6"
            app:itemIconTint="@color/color_customer_nav_item"
            app:itemTextColor="@color/color_customer_nav_item"
            app:menu="@menu/customer_bottom_nav_menu" />
    </LinearLayout>
</LinearLayout>