<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back3"
    tools:context=".Activity.TaiKhoanNVFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#F0E4CE"
            android:elevation="10dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tai Khoan"
                android:textColor="#03A9F4"
                android:textSize="40dp"
                android:textStyle="bold"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Ho Va Ten *"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edt_nhapTen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                    android:hint="Nhập Ho Ten"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Dia Chi *"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edt_nhapdiaChi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                    android:hint="Nhập Dia Chi"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="So Dien Thoai *"
                    android:textColor="#fff"/>

                <EditText
                    android:id="@+id/edt_nhapSDT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                    android:hint="Nhập So Dien Thoai"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:inputType="number"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Email *"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edt_Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                    android:hint="Nhập Email"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="CCCD/CMND/Hộ Chiếu/Hộ Khách *"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edt_CCCD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                    android:hint="Nhập So CCCD"
                    android:inputType="number"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Thong Tin Lien He Nguoi Than *"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edt_TTLHNT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                    android:hint="Nhập Thong Tin Lien He Nguoi Than"
                    android:padding="12dp"
                    android:textSize="16sp" />


                <Button
                    android:id="@+id/btn_XacNhan"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#4CAF50"
                    android:text="LUU"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
<!--        </ScrollView>-->
    </LinearLayout>
</FrameLayout>