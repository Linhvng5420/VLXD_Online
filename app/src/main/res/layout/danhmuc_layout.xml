<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back3"
    tools:context=".Activity.Warehouse_DanhMucActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0E4CE"
        android:elevation="10dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="DANH MỤC"
            android:textColor="#03A9F4"
            android:textSize="40sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:backgroundTint="#EEEEEE"
        android:elevation="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#fff"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="2dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#fff"
                android:backgroundTint="@color/white"
                android:elevation="10dp"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ivAnhDM"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:src="@drawable/add_a_photo_24"
                    android:scaleType="centerCrop" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:paddingTop="8dp"
                android:layout_marginBottom="8dp"
                android:elevation="10dp"
                android:padding="8dp">

                <EditText
                    android:id="@+id/edtNhapDM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nhập Danh Mục"
                    android:padding="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_marginBottom="8dp"
                    android:elevation="10dp">

                    <Button
                        android:id="@+id/btnThemDM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thêm"
                        android:textColor="@color/white"
                        android:paddingHorizontal="16dp"
                        android:layout_gravity="center"
                        app:cornerRadius="12dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:elevation="10dp"
                    android:padding="8dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnSuaDM"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sửa"
                        android:textColor="@color/white"
                        android:paddingHorizontal="16dp"
                        app:cornerRadius="12dp"/>

                    <Button
                        android:id="@+id/btnXoaDM"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Xoá"
                        android:textColor="@color/white"
                        android:paddingHorizontal="16dp"
                        app:cornerRadius="12dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleviewDM"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/back3"
            android:elevation="10dp"
            android:padding="8dp"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>
