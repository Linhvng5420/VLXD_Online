<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DatHangNgayFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back3"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/back6"
            android:gravity="center"
            android:text="ĐẶT HÀNG NGAY"
            android:textColor="#D7D7D7"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên Người Nhận Hàng:"
                android:textColor="#D7D7D7"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_ten_nguoi_nhan"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bg_img_item"
                android:backgroundTint="#DDD"
                android:gravity="center_vertical"
                android:hint="Ten Nguoi Nhan ..."
                android:paddingLeft="5dp"
                android:textSize="21dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Số Điện Thoại Người Nhận Hàng:"
                android:textColor="#D7D7D7"
                android:textSize="18dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_img_item"
                    android:src="@drawable/call" />

                <EditText
                    android:id="@+id/edt_sdt_nguoi_nhan"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/bg_img_item"
                    android:backgroundTint="#DDD"
                    android:gravity="center_vertical"
                    android:hint="So Dien Thoai Nguoi Nhan ..."
                    android:paddingLeft="5dp"
                    android:textSize="21dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Địa Chỉ Người Nhận Hàng:"
                android:textColor="#D7D7D7"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_dia_chi_nhan"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/bg_img_item"
                android:backgroundTint="#DDD"
                android:gravity="top"
                android:hint="Dia Chi Nguoi Nhan ..."
                android:padding="5dp"
                android:textSize="21dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_img_item"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:id="@+id/img_dat_hang_ngay"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/bg_img_detail"
                        android:scaleType="centerCrop"
                        android:src="@drawable/tc" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name_dat_hang_ngay"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="6dp"
                        android:text="Thép uốn Hòa Phát"
                        android:textColor="#D7D7D7"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_gia_dat_hang_ngay"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="6dp"
                        android:text="100.000 đ"
                        android:textColor="#F00"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="25dp"
                            android:gravity="center_vertical"
                            android:text="Số Lượng: "
                            android:textColor="#D7D7D7"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_img_detail"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/btn_giam_dat"
                                android:layout_width="15dp"
                                android:layout_height="25dp"
                                android:background="#DDD"
                                android:gravity="center"
                                android:text="-"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/edt_sl_dat"
                                android:layout_width="80dp"
                                android:layout_height="25dp"
                                android:background="@drawable/bg_img_detail"
                                android:gravity="center"
                                android:inputType="number"
                                android:text="1000"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/btn_tang_dat"
                                android:layout_width="15dp"
                                android:layout_height="25dp"
                                android:background="#DDD"
                                android:gravity="center"
                                android:text="+"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_des_dat_ngay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_img_item"
                android:backgroundTint="#D7D7D7"
                android:gravity="center_horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="Thep uon hoa phat chat luong cao, day 1mm"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_detail"
            android:backgroundTint="#0AF"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Tổng Tiền: "
                android:textSize="21dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_tong_dat_ngay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:text="100.000.000"
                android:textColor="#F00"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="đ"
                android:textColor="#F00"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:text="Thanh Toán: "
                android:textSize="18dp" />

            <Spinner
                android:id="@+id/sp_thanhToan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/t_warn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:padding="10dp"
            android:text="Lưu ý: Khi chọn phương thức trả góp sẽ có tính phí trả góp theo phần trăm tổng tiền đơn hàng. Đối với trả góp một tháng 2% và trả góp 2 tháng 5%!"
            android:textColor="#F00" />

        <Button
            android:id="@+id/btn_dat_ngay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#5000FF"
            android:text="Đặt Hàng Ngay"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>