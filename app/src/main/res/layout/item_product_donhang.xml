<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/system_accent2_10"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/imgItem"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/search" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvNameItem"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:autoSizeMaxTextSize="16sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:paddingHorizontal="5dp"
                android:text="Tên Sản Phẩm Hoi ai cpsfgdfs "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_chua_dg"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:autoSizeMaxTextSize="16sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:text="Chưa Có Đánh Giá hdja jasohfw adsjjsdf"
                android:textColor="#FA0"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ln_so_sao"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/star_1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/star_disable" />

                <ImageView
                    android:id="@+id/star_2"
                    style="@style/ThemeStar"
                    android:src="@drawable/star_disable" />

                <ImageView
                    android:id="@+id/star_3"
                    style="@style/ThemeStar"
                    android:src="@drawable/star_disable" />

                <ImageView
                    android:id="@+id/star_4"
                    style="@style/ThemeStar"
                    android:src="@drawable/star_disable" />

                <ImageView
                    android:id="@+id/star_5"
                    style="@style/ThemeStar"
                    android:src="@drawable/star_disable" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvPriceItem"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:paddingHorizontal="5dp"
                android:text="100.000.000"
                android:textColor="#F00"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>