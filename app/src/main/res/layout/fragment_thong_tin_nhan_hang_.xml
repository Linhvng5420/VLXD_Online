<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ThongTinNhanHang_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số điện thoại chủ đơn:"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edt_nhapSDT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_thongtin"
                android:hint="Nhập số điện thoại"
                android:inputType="number" />

            <TextView
                android:id="@+id/tv_thongTinNguoiNhan"
                android:text="Nhìn concac"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/edit_donhang" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Tên người nhận hàng"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edt_tenNguoiNhan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập tên người nhận hàng"
                android:background="@drawable/edit_thongtin" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Số điện thoại người nhận hàng:"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edt_nhapSoĐTNguoiNhan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:background="@drawable/edit_thongtin"
                android:hint="Nhập số điện thoại" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Địa chỉ nhận hàng:"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edt_nhapDiaChi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_thongtin"
                android:hint="Nhập địa chỉ" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginRight="40dp"
                android:text="Phương thức thanh toán"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/sp_thanhToan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:hint="Nhập địa chỉ"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="@drawable/edit_tongtien"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="Tổng tiền:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="95000"
                android:textSize="20dp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btn_XacNhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:text="Xác Nhận" />


    </LinearLayout>


</FrameLayout>