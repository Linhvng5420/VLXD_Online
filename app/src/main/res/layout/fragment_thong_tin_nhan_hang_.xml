<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    tools:context=".Activity.ThongTinNhanHang_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Phone number section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Số điện thoại chủ đơn:"
            android:textColor="#333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_nhapSDT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_tt"
            android:hint="Nhập số điện thoại"
            android:inputType="number"
            android:padding="12dp"
            android:textSize="16sp" />

        <!-- Receiver Info Header -->
        <TextView
            android:id="@+id/tv_thongTinNguoiNhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="10dp"
            android:background="@drawable/edit_text"
            android:paddingVertical="10dp"
            android:text="Thông tin người nhận"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Receiver Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Tên người nhận hàng"
            android:textColor="#333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_tenNguoiNhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_tt"
            android:hint="Nhập tên người nhận hàng"
            android:padding="12dp"
            android:textSize="16sp" />

        <!-- Receiver Phone -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Số điện thoại người nhận hàng:"
            android:textColor="#333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_nhapSoĐTNguoiNhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_tt"
            android:hint="Nhập số điện thoại"
            android:inputType="number"
            android:padding="12dp"
            android:textSize="16sp" />

        <!-- Receiver Address -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Địa chỉ nhận hàng:"
            android:textColor="#333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_nhapDiaChi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_tt"
            android:hint="Nhập địa chỉ"
            android:padding="12dp"
            android:textSize="16sp" />

        <!-- Payment Method Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_tt"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="Phương thức thanh toán"
                android:textColor="#333333"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/sp_thanhToan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:backgroundTint="#2196F3" />
        </LinearLayout>

        <!-- Total Price Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_total"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng tiền:"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="95000"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Confirm Button -->
        <Button
            android:id="@+id/btn_XacNhan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#4CAF50"
            android:text="Xác Nhận"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>
